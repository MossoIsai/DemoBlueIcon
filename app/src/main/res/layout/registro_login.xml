<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/splash3">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:foregroundGravity="center"
            android:id="@+id/imgSonata"
            android:background="@drawable/ds_sonata"/>

        <LinearLayout
            android:id="@+id/layout1"
            android:paddingTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/nombre"
                android:textSize="13px"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/editext_color2"
                android:textColorHint="@color/editext_color"
                android:hint="Nombre"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:id="@+id/layout2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/email"
                android:textSize="13px"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/editext_color2"
                android:textColorHint="@color/editext_color"
                android:hint="E-mail"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout3"
            android:paddingTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/usuario"
                android:textSize="13px"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/editext_color2"
                android:textColorHint="@color/editext_color"
                android:hint="Usuario"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:gravity="center"
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/contrasena"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="13px"
                android:textColor="@color/editext_color2"
                android:textColorHint="@color/editext_color"
                android:hint="Contraseña"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="30dp"
            android:gravity="center"
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/btnRegistro"
                android:background="@color/azul2"
                android:textColor="@color/blanco"
                android:textStyle="bold"
                android:textSize="13px"
                android:text="REGISTRATE" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="20dp"
            android:gravity="center"
            android:id="@+id/layout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="345dp"
                android:layout_height="20dp"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="@color/blanco"
                android:text="¿Ya te Registraste?"
                />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="30dp"
            android:gravity="center"
            android:id="@+id/layout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/botones"
                android:textColor="@color/blanco"
                android:textStyle="bold"
                android:textSize="15px"
                android:id="@+id/goSesion"
                android:text="INICIA SESIÓN"
                />
        </LinearLayout>
</LinearLayout>