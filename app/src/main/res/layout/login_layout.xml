<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris">
    <Button
        android:text="REGISTRO"
        android:textStyle="bold"
        android:background="@color/gris2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:id="@+id/registro"
        android:textSize="11dp"
        android:textColor="@color/blanco"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="INICIA SESIÃ“N"
        android:textStyle="bold"
        android:textSize="11dp"
        android:textColor="@color/blanco"
        android:background="@color/azul_rey"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/iniciSesion"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignBaseline="@+id/registro"
        android:layout_alignBottom="@+id/registro"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/ds_sonata"
        android:layout_marginBottom="45dp"
        android:id="@+id/imageView2"
        android:layout_above="@+id/iniciSesion"
        android:layout_centerHorizontal="true" />
</RelativeLayout>